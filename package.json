{
  "name": "@cenk1cenk2/presentation",
  "version": "1.1.0",
  "description": "The HTML Presentation Framework",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "web": "http://kilic.dev"
  },
  "repository": "https://github.com/cenk1cenk2/presentation-mti",
  "bin": "./node_modules/http-server/bin/http-server",
  "scripts": {
    "start": "grunt serve",
    "build": "grunt",
    "serve": "http-server",
    "pkg": "yarn && yarn build && rm -r node_modules && yarn --production && pkg . && yarn",
    "lint": "prettier --write . && eslint --ext .json,.ts,.js --fix ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ],
    "*/*.{html,css,scss}": [
      "prettier --write"
    ]
  },
  "pkg": {
    "scripts": [],
    "assets": [
      "./node_modules/**",
      "./dist/**",
      "./slides/**",
      "./template/**",
      "./favicon.png",
      "./index.html"
    ],
    "targets": [
      "node12-linux-x64",
      "node12-windows-x64"
    ],
    "out-dir": "dist/"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^0.2.5",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "express": "^4.16.2",
    "grunt": "^1.0.4",
    "grunt-autoprefixer": "^3.0.4",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-connect": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-jshint": "^2.0.0",
    "grunt-contrib-nodeunit": "^2.0.0",
    "grunt-contrib-qunit": "^3.1.0",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.0.2",
    "grunt-terser": "^1.0.0",
    "grunt-zip": "~0.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "load-grunt-tasks": "^4.0.0",
    "mustache": "^2.3.0",
    "node-sass": "^4.11.0",
    "pkg": "^4.4.4",
    "prettier": "^2.0.5",
    "socket.io": "^2.2.0"
  },
  "license": "MIT",
  "dependencies": {
    "http-server": "^0.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
